generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
   id        String   @id @default(cuid())       
  clerkId   String   @unique                    // Clerk user ID
  email     String   @unique                    // Email from Clerk
  name      String?
  image     String?                             // Profile image
  role      String   @default("user")           // Custom field
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  jobs Job[]@relation("postedJob")
  application Application[]
}

model Job{
  id String @id @default(cuid())
  title String 
  discription String @db.Text
  salary String?
  type String
  company String
  location String
  
  authorId String
  author User @relation("postedJob",fields: [authorId],references: [id],onDelete: Cascade)
  postAt DateTime @default(now())
  application Application[]
}

model Application{
  id String @id @default(cuid())
  jobId String
  state String @default("PENDING")
  userId String
  appliedAt DateTime @default(now())
  user User @relation(fields: [userId],references: [id])
  job Job @relation(fields: [jobId],references: [id],onDelete: Cascade)
  @@unique([jobId,userId])
}